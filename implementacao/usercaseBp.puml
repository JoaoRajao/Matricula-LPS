@startuml
!define RECTANGLE skinparam rectangle {
    FontColor #0033cc
    BackgroundColor #f2f2f2
    BorderColor #0033cc
}

actor "Aluno" as aluno
actor "Professor" as professor
actor "Secretaria" as secretaria
actor "Sistema de Cobranças" as cobranca

rectangle "Sistema de Matrículas" as sistema {
    usecase "Realizar Matrícula" as UC1
    usecase "Cancelar Matrícula" as UC2
    usecase "Consultar Disciplinas" as UC3
    usecase "Consultar Alunos" as UC4
    usecase "Gerenciar Currículo" as UC5
    usecase "Gerenciar Disciplinas" as UC6
    usecase "Gerenciar Professores" as UC7
    usecase "Gerenciar Alunos" as UC8
    usecase "Notificar Cobrança" as UC9
}

aluno --> UC1
aluno --> UC2
aluno --> UC3
professor --> UC4
secretaria --> UC5
secretaria --> UC6
secretaria --> UC7
secretaria --> UC8
UC1 --> cobranca : "Notifica Cobrança"
UC2 --> cobranca : "Notifica Cancelamento"

@enduml
